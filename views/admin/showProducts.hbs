<div id="layout-wrapper">  
            

            <!-- ========== Left Sidebar Start ========== -->

            
            <!-- Start right Content here -->
            <!-- ============================================================== -->
                <div class="main-content">

                    <div class="page-content">
                        {{!-- <div class="container-fluid"> --}}

                            <!-- start page title -->
                            <div class="row">

                                
                                <table class="table" id="adminTable" >
                                    <thead>
                                        <tr >
                                        <th scope="col">No</th>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Modify/Delete</th>
                                        </tr>
                                    </thead>
                                        <tbody >
                                            {{#each products}}
                                                <tr class="align-middle">
                                                    <td></td>
                                                    <td>{{this.productname}}</td>
                                                    <td>{{this.productprice}}</td>
                                                    <td>{{this.manufacturerquantity}}</td>
                                                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}image1.jpg">
                                                    <img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}image2.jpg">
                                                    <img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}image3.jpg">
                                                    <img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}image4.jpg"></td>
                                                    <td>
                                                        <a class="btn btn-primary mt-2 "  href="/showProducts/edit/{{this._id}}" onclick="return confirm('click Ok to confirm Edit{{this.categoryName}}')" type="submit">Edit</a>
                                                        <a class="btn btn-danger mt-2 "  href="/showProducts/delete/{{this._id}}" onclick="return confirm('click Ok to confirm Delete {{this.categoryName}}')" type="submit">Delete</a>
                                                    </td>
                                                </tr>
                                            {{/each}}
                                            
                                        </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
</div>





