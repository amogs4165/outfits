<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
  google.charts.load("current", { packages: ["corechart"] });
  google.charts.setOnLoadCallback(drawChart);
  function drawChart() {
    let cod = document.getElementById("codPayment").value;
    let razorpay = document.getElementById("razorpayPayment").value;
    let paypal = document.getElementById("paypalPayment").value;
    console.log("heyeh", parseInt(cod), razorpay, paypal)
    var data = google.visualization.arrayToDataTable([
      ['Task', 'Hours per Day'],
      ['COD', parseInt(cod)],
      ['RAZOR PAY', parseInt(razorpay)],
      ['PAYPAL', parseInt(paypal)]
    ]);

    var options = {
      title: 'Payment method',
      pieHole: 0.4,
      width: 550,
      height: 350,
    };

    var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
    chart.draw(data, options);
  }
</script>
<script type="text/javascript">
  google.charts.load("current", { packages: ["corechart"] });
  google.charts.setOnLoadCallback(drawChart);
  function drawChart() {
    var data = google.visualization.arrayToDataTable(JSON.parse(document.getElementById("category").value));

    var options = {
      title: 'Category sold',
      is3D: true,
      width: 550,
      height: 350,
    };

    var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
    chart.draw(data, options);
  }
</script>
<script type="text/javascript">
  google.charts.load("current", { packages: ["corechart"] });
  google.charts.setOnLoadCallback(drawChart);
  function drawChart() {
   
    var data = google.visualization.arrayToDataTable(JSON.parse(document.getElementById("stock").value));

    var options = {
      title: 'Category stock',
      pieHole: 0.4,
      width: 550,
      height: 350,
    };

    var chart = new google.visualization.PieChart(document.getElementById('cateogryStock'));
    chart.draw(data, options);
  }
</script>

<script type="text/javascript">
  window.addEventListener('resize', () => {
    google.charts.load("current", { packages: ['corechart'] });
    google.charts.setOnLoadCallback(() => drawChart(document.getElementById("columnchart_values").clientWidth));
  });


  google.charts.load("current", { packages: ['corechart'] });
  google.charts.setOnLoadCallback(drawChart);
  function drawChart(width = 0) {
    var data = google.visualization.arrayToDataTable([
      ["Element", "Density", { role: "style" }],
      ["January", 21.45, "color: #e5e4e2"],
      ["February", 8.94, "#b87333"],
      ["March", 10.49, "silver"],
      ["April", 19.30, "gold"],
      ["May", 21.45, "color: #e5e4e2"],
      ["June", 8.94, "#b87333"],
      ["July", 10.49, "silver"],
      ["August", 19.30, "gold"],
      ["September", 21.45, "color: #e5e4e2"],
      ["October", 8.94, "#b87333"],
      ["November", 10.49, "silver"],
      ["December", 19.30, "gold"],
    ]);

    var view = new google.visualization.DataView(data);
    view.setColumns([0, 1,
      {
        calc: "stringify",
        sourceColumn: 1,
        type: "string",
        role: "annotation"
      },
      2]);

    var options = {
      title: "Monthly sales (2022)",
      width: width || document.getElementById("columnchart_values").clientWidth,
      height: document.getElementById("columnchart_values").clientHeight,
      bar: { groupWidth: "95%" },
      legend: { position: "none" },
    };
    var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values"));
    chart.draw(view, options);
  }
</script>
