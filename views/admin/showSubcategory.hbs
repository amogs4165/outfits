<script>
    function removeSubCategory(id) {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this Category!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: "/categoryManagement/deleteSubCategory",
                        type: "POST",
                        data: {
                            id: id
                        },

                        success:  ()=> {
                             $('#' + id).remove()
                             swal("Category has been deleted!", {
                                icon: "success",
                            });
                      
                        },

                    });

                } else {
                    swal("Category not deleted!");
                }
            });
    }
    
</script>


