<script>
    $('.data-buyProduct').click(function (e) {
        alert("hey")
        var proId = $(this).data('proid')
        var pname = $(this).data('pname')
        var price = $(this).data('price')
        buyProduct(proId, pname, price)
        e.preventDefault()
    })

    function buyProduct(id, pname, price) {
        alert("hey")
        $.ajax({
            url: '/buyProduct',
            method: 'post',
            data: {
                productId: id,
                productname: pname,
                productprice: price,
                total: price
            },
            success: (response) => {
                alert(response.status)

            }
        })
    }
</script>